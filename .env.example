# Database Configuration
DB_HOST=localhost                 # PostgreSQL host
DB_PORT=5432                      # PostgreSQL port
DB_USERNAME=postgres              # Database username
DB_PASSWORD=postgres              # Database password
DB_NAME=subscription_db          # Database name

# Redis Configuration
REDIS_HOST=localhost             # Redis host
REDIS_PORT=6379                  # Redis port
REDIS_TTL=60                     # Cache TTL in seconds

# JWT Configuration
JWT_SECRET=your_jwt_secret       # Secret key for JWT tokens
JWT_EXPIRATION=15m               # Access token expiration
JWT_REFRESH_SECRET=your_secret   # Secret for refresh tokens
JWT_REFRESH_EXPIRATION=7d        # Refresh token expiration

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxx    # Stripe secret key
STRIPE_WEBHOOK_SECRET=whsec_xxx  # Stripe webhook secret

# Application Configuration
PORT=8000                        # Application port
NODE_ENV=development             # Environment (development/production)
FRONTEND_URL=http://localhost:4242 # Frontend URL for CORS

# Rate Limiting Configuration
RATE_LIMIT_TTL=60                # Rate limit window in seconds
RATE_LIMIT_BASIC=500             # Basic plan daily limit
RATE_LIMIT_PREMIUM=1500          # Premium plan daily limit
RATE_LIMIT_BUSINESS=10000        # Business plan daily limit
RATE_LIMIT_BLOCK_TTL=3600        # Block duration when limit exceeded